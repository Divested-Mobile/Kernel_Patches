-	uint16_t num_vlan = 0, num_entries = 0, tvlv_len;
+	uint16_t num_vlan = 0, tvlv_len;
+	u16 vlan_entries = 0;
+	u16 total_entries = 0;
 	uint8_t *tt_change_ptr;
