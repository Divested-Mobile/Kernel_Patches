 	spin_lock_bh(&tt_global->list_lock);
@@ -1258,6 +1292,8 @@ batadv_tt_global_orig_entry_add(struct batadv_tt_global_entry *tt_global,
 	spin_unlock_bh(&tt_global->list_lock);
