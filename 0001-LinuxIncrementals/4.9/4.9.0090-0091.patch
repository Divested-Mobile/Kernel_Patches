diff --git a/Makefile b/Makefile
index df3b20af0fdb..db0de0d2e6c2 100644
--- a/Makefile
+++ b/Makefile
@@ -790,6 +790,15 @@ KBUILD_CFLAGS += $(call cc-disable-warning, pointer-sign)
